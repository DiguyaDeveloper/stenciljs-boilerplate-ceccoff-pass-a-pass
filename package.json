{
  "name": "stenciljs-ceccoff-boilerplate",
  "version": "0.0.1",
  "description": "Stencil Component Starter",
  "main": "dist/index.cjs.js",
  "module": "dist/custom-elements/index.js",
  "es2015": "dist/esm/index.mjs",
  "es2017": "dist/esm/index.mjs",
  "types": "dist/custom-elements/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/stenciljs-ceccoff-boilerplate/stenciljs-ceccoff-boilerplate.esm.js",
  "files": [
    "dist/",
    "loader/"
  ],
  "scripts": {
    "build": "stencil build --docs",
    "start": "stencil build --dev --watch --serve",
    "test": "stencil test --spec --e2e",
    "test.watch": "stencil test --spec --e2e --watchAll",
    "generate": "stencil generate",
    "lint": "concurrently npm:lint:*",
    "lint:scss": "stylelint --fix \"src/**/*.scss\" && prettier --write \"**/*.scss\"",
    "lint:ts": "tslint --fix --project tsconfig-tslint.json --fix && eslint --ext .ts,.tsx --fix . && prettier --write \"**/*.ts?(x)\"",
    "prettier": "concurrently npm:prettier:*",
    "prettier:html": "prettier --write \"**/*.html\"",
    "prettier:json": "prettier --write \"**/*.json\"",
    "prettier:md": "prettier --write \"**/*.md\"",
    "prepare": "husky install",
    "docs": "concurrently --kill-others --raw \"npm:util:build-docs && build-storybook --static-dir ./__docs-temp__ --output-dir ./docs\"  \"ts-node ./support/cleanOnProcessExit.ts --path ./__docs-temp__\"",
    "docs:preview": "concurrently --raw \"npm:util:build-docs && start-storybook --static-dir ./__docs-temp__\" \"ts-node ./support/cleanOnProcessExit.ts --path ./__docs-temp__\"",
    "storybook.run": "start-storybook -p 6006 -s dist",
    "storybook": "npm-run-all --parallel build storybook.run",
    "build-storybook": "build-storybook -c ./.storybook -o ../public"
  },
  "dependencies": {
    "@stencil/core": "2.7.0",
    "typescript": "^4.3.5"
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@stencil/eslint-plugin": "^0.3.1",
    "@stencil/sass": "^1.4.1",
    "@storybook/addon-actions": "^6.1.7",
    "@storybook/addon-essentials": "^6.1.7",
    "@storybook/addon-links": "^6.1.7",
    "@storybook/addon-notes": "^5.3.21",
    "@storybook/addon-viewport": "^6.1.7",
    "@storybook/html": "^6.1.7",
    "@types/jest": "^26.0.24",
    "@typescript-eslint/eslint-plugin": "^4.29.2",
    "@typescript-eslint/parser": "^4.29.2",
    "babel-loader": "^8.2.2",
    "case": "^1.6.3",
    "concurrently": "^6.2.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-react": "^7.24.0",
    "husky": "^7.0.1",
    "jest": "^26.6.3",
    "jest-cli": "^26.6.3",
    "npm-run-all": "^4.1.5",
    "prettier": "2.3.2",
    "storybook": "^6.3.7",
    "stylelint": "^13.13.1",
    "stylelint-config-recommended-scss": "4.3.0",
    "stylelint-scss": "3.20.1",
    "ts-node": "^10.2.1",
    "tslint": "6.1.3"
  },
  "license": "MIT"
}
